<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/fonts/elegant_font/style.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white  mb-3">
            <div class="container">
                <a class="navbar-brand nav-button" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item nav-button">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tire" asp-action="Index">Opony</a>
                        </li>
                        <li class="nav-item nav-button">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Rim" asp-action="Index">Felgi</a>
                        </li>
                        <li class="nav-item nav-button">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tire" asp-action="AddTire">Dodaj opony</a>
                        </li>
                        <li class="nav-item nav-button">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Rim" asp-action="AddRim">Dodaj felgi</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - net_Oponeo - Privacy
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
